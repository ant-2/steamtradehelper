<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    
    <listener>
        <listener-class>eu.mosov.steamTradeHelper.web.JavaUtilLoggerRedirector</listener-class>
    </listener>
    
    <filter>
        <filter-name>RequestLogFilter</filter-name>
        <filter-class>eu.mosov.steamTradeHelper.web.RequestLogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestLogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>jersey</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>JerseyApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>jersey</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <!--
        <servlet>
            <servlet-name>javax.ws.rs.core.Application</servlet-name>
            &lt;!&ndash;No need to <servlet-class>&ndash;&gt;
            &lt;!&ndash;Jersey will implicitly add an instance of core Jersey Application sub class as a servlet class&ndash;&gt;
        </servlet>

        <servlet-mapping>
            <servlet-name>javax.ws.rs.core.Application</servlet-name>
            <url-pattern>/rest/*</url-pattern>
        </servlet-mapping>
    -->

</web-app>